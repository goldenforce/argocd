### Configure folders
function configureFolders()
{
	### Functions path
	functions_folder="/etc/edm/functions"

	### Functions path
	configurations_folder="/etc/edm/configurations"
	
	### Start EDM
	start_edm="/${mount_home}/logs/Initialize/servers/startEDM"

	### Check Schemas accesible
	schemas_verified="/${mount_home}/logs/Initialize/servers/schemasVerified"

	### All job logs file
	log_all_jobs_summary="/${mount_home}/logs/Initialize/allJobsSummary.log"

	### Installation studio
	installationProfilePath=/ext/app/installation_studio

	## Platform State
	configurePlatformstateFolder="/${mount_home}/logs/Initialize/configurePlatformstate"
	configurePlatformstateLogFile="${configurePlatformstateFolder}/configurePlatformstate.log"

	## Check schemas accessible
	checkDatabaseSchemasWorkFolder="/${mount_home}/logs/Initialize/checkDatabaseSchemas"
	checkDatabaseSchemasLogFile="${checkDatabaseSchemasWorkFolder}/checkDatabaseSchemas.log"
	
	## Create Database Schemas
	createDatabaseSchemasWorkFolder="/${mount_home}/logs/Initialize/createDatabaseSchemas"
	createDatabaseSchemasLogFile="${createDatabaseSchemasWorkFolder}/createDatabaseSchemas.log"
	
	## Configure Elastic Search Index
	configureElasticsearchIndexWorkFolder="/${mount_home}/logs/Initialize/configureElasticsearchIndex"
	configureElasticsearchIndexLogFile="${configureElasticsearchIndexWorkFolder}/configureElasticsearchIndex.log"
	
	## Configure Keycloak
	configureKeycloakWorkFolder="/${mount_home}/logs/Initialize/configureKeycloak"
	configureKeycloakLogFile="${configureKeycloakWorkFolder}/configureKeycloak.log"

	## Configure Mount
	configureMountWorkFolder="/${mount_home}/logs/Initialize/configureMount"
	configureMountLogFile="${configureMountWorkFolder}/configureMount.log"

	## Configure Gem
	configureGemWorkFolder="/${mount_home}/logs/Initialize/configureGem"
	configureGemLogFile="${configureGemWorkFolder}/configureGem.log"

	## Configure Custom Roles
	configureCustomRolesWorkFolder="/${mount_home}/logs/Initialize/configureCustomRoles"
	configureCustomRolesLogFile="${configureCustomRolesWorkFolder}/configureCustomRoles.log"

	## Configure Database Reorg
	configureDatabaseReorgWorkFolder="/${mount_home}/logs/Initialize/configureDatabaseReorg"
	configureDatabaseReorgLogFile="${configureDatabaseReorgWorkFolder}/configureDatabaseReorgWorkFolder.log"

	## Configure Domains
	configureDomainsWorkFolder="/${mount_home}/logs/Initialize/configureDomains"
	configureDomainsLogFile="${configureDomainsWorkFolder}/configureDomains.log"

	## Configure DatabaseSQL
	configureDatabaseSQLWorkFolder="/${mount_home}/logs/Initialize/configureDatabaseSQL"
	configureDatabaseSQLLogFile="${configureDatabaseSQLWorkFolder}/configureDatabaseSQL.log"

	## Configure Edma
	configureEdmaWorkFolder="/${mount_home}/logs/Initialize/configureEdma"
	configureEdmaLogFile="${configureEdmaWorkFolder}/configureEdma.log"

}